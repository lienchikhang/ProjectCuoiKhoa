<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/ImgSP"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:src="@drawable/ic_launcher_background"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="140dp"
        android:orientation="vertical"
        android:padding="8dp"
        app:layout_constraintLeft_toRightOf="@+id/ImgSP"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/NameSp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:text="Ten SP"
            android:textColor="#000"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintLeft_toRightOf="@+id/ImgSP"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/SizeSP"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Size:"
                android:textColor="#000"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintLeft_toRightOf="@+id/ImgSP"
                app:layout_constraintTop_toBottomOf="@id/NameSp" />

            <TextView
                android:id="@+id/SizeCart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:text="14"
                android:textColor="#000"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintLeft_toRightOf="@id/SizeSP"
                app:layout_constraintTop_toBottomOf="@id/NameSp" />
        </LinearLayout>


        <TextView
            android:id="@+id/PriceCart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:text="100.000.000"
            android:textSize="16sp"
            app:layout_constraintLeft_toRightOf="@id/ImgSP"
            app:layout_constraintTop_toBottomOf="@id/SizeSP" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/minusBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/minus"
                app:layout_constraintLeft_toRightOf="@id/ImgSP"
                app:layout_constraintTop_toBottomOf="@id/PriceCart" />

            <TextView
                android:id="@+id/QuantityCart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:padding="8dp"
                android:text="1"
                app:layout_constraintLeft_toRightOf="@id/minusBtn"
                app:layout_constraintTop_toBottomOf="@id/PriceCart" />

            <ImageButton
                android:id="@+id/addBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:background="@drawable/add"
                app:layout_constraintLeft_toRightOf="@id/QuantityCart"
                app:layout_constraintTop_toBottomOf="@id/PriceCart" />

        </LinearLayout>

    </LinearLayout>

    <!--    <ImageButton-->
    <!--        android:layout_width="wrap_content"-->
    <!--        android:layout_height="wrap_content"-->
    <!--        app:layout_constraintTop_toTopOf="parent"-->
    <!--        app:layout_constraintRight_toRightOf="parent"-->
    <!--        android:id="@+id/DeleteCart"-->
    <!--        android:layout_marginLeft="4dp"-->
    <!--        android:background="@drawable/delete_cart_item"-->
    <!--        />-->

    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="xoa"
        android:id="@+id/DeleteCart"
        android:textSize="25sp"
        app:layout_constraintStart_toStartOf="@+id/guideline2"
        app:layout_constraintTop_toBottomOf="@id/guideline4" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="77dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.32" />


</androidx.constraintlayout.widget.ConstraintLayout>