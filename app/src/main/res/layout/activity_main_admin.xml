    <androidx.constraintlayout.widget.ConstraintLayout
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Xin chào"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/adminName"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginRight="4dp"
            android:layout_marginTop="26dp"
            android:padding="16dp"
            android:layout_marginLeft="28dp"/>

        <TextView
            android:id="@+id/adminName"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="28dp"
            android:layout_marginTop="26dp"
            android:text="test"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            android:padding="16dp"
            android:background="@drawable/custom_btn_border"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
    <LinearLayout
        app:layout_constraintTop_toBottomOf="@id/guideline11"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginRight="8dp"

            >

            <LinearLayout
                android:id="@+id/manageProduct"
                android:layout_width="170dp"
                android:layout_height="180dp"
                android:background="@drawable/border_user"
                android:orientation="vertical"
                android:padding="8dp"
                android:layout_marginBottom="8dp"
                android:gravity="center"
                >

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/ic_shoes"
                    android:background="@drawable/bg_circle"
                    android:padding="16dp"/>

                <TextView
                    android:textAlignment="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Quản lí sản phẩm"
                    android:textSize="24sp"
                    android:textColor="@color/black"
                    android:textStyle="bold"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/manageOrder"
                android:layout_width="170dp"
                android:layout_height="180dp"
                android:background="@drawable/border_user"
                android:orientation="vertical"
                android:padding="8dp"
                android:layout_marginTop="8dp"
                android:gravity="center"
                >

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/ic_shoppingcart"
                    android:background="@drawable/bg_circle"
                    android:padding="16dp"/>

                <TextView
                    android:textAlignment="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Quản lí đơn hàng"
                    android:textSize="24sp"
                    android:textColor="@color/black"
                    android:textStyle="bold"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="8dp">

            <LinearLayout
                android:id="@+id/manageUser"
                android:layout_width="170dp"
                android:layout_height="180dp"
                android:background="@drawable/border_user"
                android:orientation="vertical"
                android:padding="8dp"
                android:layout_marginBottom="8dp"
                android:gravity="center"
                >

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/ic_men"
                    android:background="@drawable/bg_circle"
                    android:padding="16dp"/>

                <TextView
                    android:textAlignment="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Quản lí người dùng"
                    android:textSize="24sp"
                    android:textColor="@color/black"
                    android:textStyle="bold"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/btnLogoutt"
                android:layout_width="170dp"
                android:layout_height="180dp"
                android:background="@drawable/border_user"
                android:orientation="vertical"
                android:padding="8dp"
                android:layout_marginTop="8dp"
                android:gravity="center"
                >

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/ic_logout"
                    android:background="@drawable/bg_circle"
                    android:padding="16dp"/>

                <TextView
                    android:textAlignment="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Đăng xuất"
                    android:textSize="24sp"
                    android:textColor="@color/black"
                    android:textStyle="bold"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

